<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="gopersonal" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>GoPersonal Configuration</label>
            <tab>general</tab>
            <resource>Gopersonal_Magento::config_gopersonal</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                
                <field id="client_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Client ID</label>
                    <comment>Enter the Client ID for GoPersonal.</comment>
                    <validate>required-entry</validate>
                </field>

                <field id="gopersonal_has_search" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Search Feature</label>
                    <comment>Set this value to 'YES' to enable the GoPersonal AI Search capabilities (ask support if can be enabled).</comment>
                </field>
            </group>
        </section>
    </system>
</config>
